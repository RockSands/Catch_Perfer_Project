<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.katch.perfer.mybatis.mapper.BaseItemRecommendMapper">
	<resultMap id="RecommenderMap" type="com.katch.perfer.mybatis.model.BaseItemRecommend">
		<result column="ITEM_ID" property="itemId" />
		<result column="ITEM_ID2" property="itemId2" />
		<result column="SCORE" property="score" />
	</resultMap>

	<sql id="Recommender_Column_List">
		ITEM_ID, ITEM_ID2, SCORE
	</sql>

	<select id="queryRecommenders" parameterType="long" resultMap="RecommenderMap">
		SELECT
		<include refid="Recommender_Column_List" />
		FROM
		RECOMMEND_BASE_ITEM_TABLE
		WHERE
		ITEM_ID = #{itemID}
	</select>

</mapper>