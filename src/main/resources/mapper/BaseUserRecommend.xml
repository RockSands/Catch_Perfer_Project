<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.katch.perfer.mybatis.mapper.BaseUserRecommendMapper">
	<resultMap id="RecommenderMap" type="com.katch.perfer.mybatis.model.BaseUserRecommend">
		<result column="USER_ID" property="userId" />
		<result column="ITEM_ID" property="itemId" />
		<result column="SCORE" property="score" />
	</resultMap>

	<sql id="Recommender_Column_List">
		USER_ID, ITEM_ID, SCORE
	</sql>

	<select id="queryRecommenders" parameterType="long" resultMap="RecommenderMap">
		SELECT
		<include refid="Recommender_Column_List" />
		FROM
		RECOMMEND_BASE_USER_TABLE
		WHERE
		USER_ID = #{userID}
	</select>

</mapper>