<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.katch.perfer.mybatis.mapper.RecommenderMapper">
	<resultMap id="RecommenderMap" type="com.katch.perfer.mahout.model.Recommender">
		<result column="YH_ID" property="userID" />
		<result column="SP_RECOMMENDS" property="itemRecommedns" />
		<result column="UPDATE_TIME" property="updateTime" />
	</resultMap>

	<sql id="Recommender_Column_List">
		YH_ID, SP_RECOMMENDS, UPDATE_TIME
	</sql>

	<select id="queryRecommender" parameterType="long" resultMap="RecommenderMap">
		SELECT
		<include refid="Recommender_Column_List" />
		FROM
		SQY_RZDK_SPTJ
		WHERE
		YH_ID = #{userID}
	</select>

	<insert id="insertRecommender" parameterType="com.katch.perfer.mahout.model.Recommender">
		INSERT INTO
		SQY_RZDK_SPTJ
			(<include refid="Recommender_Column_List" />)
		VALUES
			(#{userID},#{itemRecommedns},#{updateTime})
	</insert>

	<delete id="deleteRecommender" parameterType="long">
		DELETE FROM
		SQY_RZDK_SPTJ
		WHERE
		YH_ID =#{userID}
	</delete>

</mapper>